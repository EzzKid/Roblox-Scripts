local player = game.Players.LocalPlayer

-- Function to equip fists once
local function equipFistsOnce()
    local character = player.Character
    if not character then return end

    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if not humanoid then return end

    -- Look for Fists in backpack first, then character
    local fists = player.Backpack:FindFirstChild("Fists") or character:FindFirstChild("Fists")
    if fists then
        humanoid:EquipTool(fists)
    end
end

-- Function to handle everything on respawn
local function onRespawn()
    -- Wait for character and backpack to load properly
    local character = player.Character or player.CharacterAdded:Wait()
    local backpack = player:WaitForChild("Backpack")

    -- Give a small delay for tools to replicate
    task.wait(3)

    -- Equip fists once
    equipFistsOnce()
end

-- Connect to respawn
player.CharacterAdded:Connect(onRespawn)

-- Run for the first spawn
onRespawn()
